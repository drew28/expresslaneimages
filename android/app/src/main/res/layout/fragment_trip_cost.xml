<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".fragments.TripCostFragment"
        android:textAlignment="textEnd"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/directionLabel"
            android:text="@string/direction"
            android:clickable="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingEnd="15dip"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/direction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/directions"
            android:spinnerMode="dialog"
            android:background="#dddddd"
            android:touchscreenBlocksFocus="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/entryLabel"
            android:text="@string/entry"
            android:clickable="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingEnd="15dip"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:background="#dddddd"
            android:entries="@array/entries_options"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/exitLabel"
            android:text="@string/exit"
            android:clickable="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingEnd="15dip"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:background="#dddddd"
            android:entries="@array/exits_options"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Your Route"
            android:id="@+id/trip_cost_submit_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/response"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingStart="14dip"
            android:paddingEnd="15dip"/>

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/road495"
                android:text="495"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingStart="14dip"
                android:paddingEnd="15dip"
                android:textAlignment="textEnd" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rate495"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingStart="14dip"
                android:paddingEnd="15dip"/>



        </LinearLayout>
        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:id="@+id/road95"
                android:text="95"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingStart="14dip"
                android:paddingEnd="15dip"
                android:textAlignment="textEnd" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rate95"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingStart="14dip"
                android:paddingEnd="15dip"/>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/disclaimer"
            android:text="@string/disclaimer"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingStart="14dip"
            android:paddingEnd="15dip"
            android:layout_marginTop="15dp" />

    </LinearLayout>

</ScrollView>

